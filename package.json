{
  "name": "@flyreel/validation-lib",
  "version": "0.1.4",
  "module": "dist/flyreel-validation.esm.js",
  "main": "dist/index.js",
  "license": "MIT",
  "author": "Ahmed Alahmady",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/@flyreel"
  },
  "files": [
    "dist",
    "src"
  ],
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "tsdx build",
    "lint": "eslint . --ext ts --ext tsx",
    "lint:fix": "yarn lint -- --fix",
    "lint:types": "tsc --noEmit",
    "format": "prettier --write --ignore-path .gitignore \"*/**/*.{js,jsx,ts,tsx}\"",
    "prepare": "tsdx build",
    "prepublishOnly": "yarn lint && yarn lint:types && yarn test && yarn build",
    "release": "yarn prepublishOnly && changeset publish",
    "start": "tsdx watch",
    "test": "tsdx test",
    "test-all": "yarn lint && yarn type-check && yarn test"
  },
  "prettier": {
    "trailingComma": "none",
    "singleQuote": true,
    "semi": false,
    "printWidth": 80,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test-all"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn format"
    ]
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.2.7",
    "@changesets/cli": "^2.12.0",
    "@types/yup": "0.29.11",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "eslint": "7.16.0",
    "eslint-config-prettier": "7.1.0",
    "husky": "^4.3.6",
    "libphonenumber-js": "1.9.6",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^4.1.3",
    "utility-types": "3.10.0",
    "yup": "0.32.8"
  }
}
