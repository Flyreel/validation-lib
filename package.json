{
  "name": "@flyreel/validation-lib",
  "version": "0.4.4",
  "module": "dist/flyreel-validation.esm.js",
  "main": "dist/index.js",
  "license": "MIT",
  "author": "Ahmed Alahmady",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/@flyreel"
  },
  "files": [
    "dist",
    "src"
  ],
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "tsdx build",
    "lint": "eslint . --ext ts --ext tsx",
    "lint:fix": "yarn lint -- --fix",
    "lint:types": "tsc --noEmit",
    "format": "prettier --write --ignore-path .gitignore \"*/**/*.{js,jsx,ts,tsx}\"",
    "prepare": "tsdx build",
    "prepublishOnly": "yarn lint && yarn lint:types && yarn test && yarn build",
    "pub": "npm version patch --force && npm publish",
    "release": "yarn prepublishOnly && changeset publish",
    "release-minor": "yarn prepublishOnly && npm version patch --force && changeset publish",
    "start": "tsdx watch",
    "test": "tsdx test",
    "test-all": "yarn lint && yarn type-check && yarn test",
    "type-check": "tsc --pretty --noEmit"
  },
  "prettier": {
    "trailingComma": "none",
    "singleQuote": true,
    "semi": false,
    "printWidth": 80,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test-all"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn format"
    ]
  },
  "peerDependencies": {
    "dayjs": "^1.10.4",
    "yup": "0.32.8"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.2.8",
    "@changesets/cli": "^2.13.1",
    "@types/yup": "0.29.11",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "dayjs": "^1.10.4",
    "eslint": "7.18.0",
    "eslint-config-prettier": "7.2.0",
    "husky": "^4.3.8",
    "lint-staged": "10.5.3",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3",
    "utility-types": "3.10.0",
    "yup": "0.32.8"
  }
}
